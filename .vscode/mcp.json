{
    "servers": {
        "python-sandbox": {
            "type": "stdio",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-u",
                "${workspaceFolder}/mcp_server_code_execution_mode.py"
            ],
            "env": {
                "MCP_BRIDGE_LOG_LEVEL": "DEBUG",
                "MCP_BRIDGE_IMAGE": "python-sandbox:latest",
                "MCP_BRIDGE_STATE_DIR": "${workspaceFolder}/.mcp",
                "PYTHONUNBUFFERED": "1"
            }
        }
    }
}
